    <!-- Populate data from form to modal -->
    <script>
      document.getElementById('submitBtn').addEventListener('click', function () {

        // Get the form data
        var formData = new FormData(document.getElementById('hatchForm'));
        var incubatorID = formData.get('incubatorID');
        var dateOut = formData.get('dateOut');
        var numEgg = formData.get('numEgg');
        var notHatch = formData.get('notHatch');
        var brooderID = formData.get('brooderID');

        var modalBodyContent = '<h5>This will submit the following record:</h5><ul><li>Incubator ID: <b>' +
          incubatorID + '</b></li><li>Date Hatch: <b>' + dateOut + '</b></li><li>Number of Eggs in Hatching Basket: <b>' +
          numEgg + '</b></li><li>Number Did Not Hatch: <b>' + notHatch + '</b></li><li>Place to Brooder: <b>' +
          brooderID + '</b></li></ul>'
        document.getElementById('modalBody').innerHTML = modalBodyContent;

      });
    </script>

