      <!-- Populate data from form to modal -->
      <script>
        document.getElementById('submitBtn').addEventListener('click', function () {

          // Get the form data
          var formData = new FormData(document.getElementById('transferForm'));
          var origin = formData.get('origin');
          var destination = formData.get('destination');
          var numOfHens = formData.get('numOfHens');
          var numOfRoosters = formData.get('numOfRoosters');
          console.log(origin)
          console.log(destination)
          console.log(numOfHens)
          console.log(numOfRoosters)

          var modalBodyContent = '<h5>This will submit the following record:</h5><ul><li>Origin: <b>' + origin + '</b></li><li>Transfer to: <b>' +
            destination + '</b></li><li>Number of Hens: <b>' + numOfHens + '</b></li><li>Number of Roosters: <b>' +
            numOfRoosters + '</b></li></ul>'
          document.getElementById('modalBody').innerHTML = modalBodyContent;

        });
      </script>

