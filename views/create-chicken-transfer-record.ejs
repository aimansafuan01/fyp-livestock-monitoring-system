    <% 
      const currDate=new Date().toLocaleDateString('en-MY'); 
      const coopIDs = data.coopIDS.map(coop => coop.coopID);
    %>

      <div class="p-3 mx-5 border border-secondary rounded shadow-lg mb-4">
        <form class="needs-validation" action="/chicken-transfer/submit" method="post" role="form" class="text-start" id="transferForm">
          <div id="formRepeat">
            <div class="row border px-2 py-2 mx-1">
              <div class="row mt-1">
                <div class="col-12 col-md-2">
                  <label for="incubatorID" class="form-label pt-2 mb-0">Origin</label>
                  <input type="text" class="form-control text-black ps-2" name="origin" id="origin" value="<%= data.id %>" readonly>
                </div>
                <div class="col-12 col-md-4">
                  <label for="destination" class="form-label pt-2 mb-0">To</label>
                  <select class="form-select ps-2" aria-label="Default select example" name="destination" id="destination" required> 
                    <%
                      for (coopID of coopIDs) { 
                        if (coopID === data.id) {
                          continue;
                        }
                    %>
                    <option value="<%= coopID %>"><%= coopID %></option>
                    <% } %>
                  </select>
                </div>
              </div>
              <div class="row mt-1">
                <div class="col-12 col-md-3">
                  <label for="trayPlacement" class="form-label pt-2 mb-0">Number of Hens</label>
                  <input type="number" class="form-control text-black ps-2" name="numOfHens" min="0" id="numOfHens" required>
                </div>
                <div class="col-12 col-md-3">
                  <label for="trayPlacement" class="form-label pt-2 mb-0">Number of Roosters</label>
                  <input type="number" class="form-control text-black ps-2" name="numOfRoosters" min="0"  id="numOfRoosters" required>
                </div>
              </div>
              <div class="col-12 mt-3 align-self-end d-flex">
                <button type="button" class="btn btn-sm btn-warning p-3 px-3" data-bs-toggle="modal"
                  data-bs-target="#confirmationModal" id="submitBtn">
                  Submit form
                </button>
              </div>
            </div>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="confirmationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">Submit Record?</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalBody">
          
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-warning" action="submit">Confirm</button>
                </div>
              </div>
            </div>
        </form>
      </div>

