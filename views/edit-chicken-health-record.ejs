    <div class="p-3 mx-5 border border-secondary rounded shadow-lg mb-4">
      <form class="needs-validation" action="/chicken-health/edit/record" method="post" role="form" class="text-start" id="updateChickenHealthForm">
        <div id="formRepeat">
          <div class="row border px-2 py-2 mx-1">
            <div class="row mx-1">
              <div class="col-2 ps-0">
                <label for="recordID">Record ID</label>
                <input type="text" class="form-control text-black ps-2" name="recordID" id="recordID" value="<%= recordData[0].recordHealthID %>" readonly>
              </div>
              <div class="col-2 ps-0">
                <label for="origin">Origin</label>
                <input type="text" class="form-control text-black ps-2" name="origin" id="origin" value="<%= recordData[0].origin %>" readonly>
              </div>
              <div class="col-2 ps-0">
                <label for="symptom">Symptom</label>
                <input type="text" class="form-control text-black ps-2" name="symptom" id="symptom" value="<%= recordData[0].symptom %>" readonly>
              </div>
            </div>
            <div class="row">
              <div class="col pb-2">
                <label for="numOfHens" class="form-label pt-2 mb-0">Number of Hens</label>&nbsp;<i class="fas fa-question-circle" data-bs-toggle="tooltip" data-bs-placement="top"
                  data-bs-title="The number in grey represent the number of hens from current health record"></i>
                <input type="number" class="form-control p-2" name="numOfHens" id="numOfHens" min="0" max="<%= recordData[0].numOfHens %>" placeholder="<%= recordData[0].numOfHens %>" required>
              </div>
              <div class="col pb-2">
                <label for="numOfRoosters" class="form-label pt-2 mb-0">Number of Roosters</label>&nbsp;<i class="fas fa-question-circle" data-bs-toggle="tooltip" data-bs-placement="top"
                  data-bs-title="The number in grey represent the number of roosters from current health record"></i>
                <input type="number" class="form-control p-2" name="numOfRoosters" id="numOfRoosters" min="0" max="<%= recordData[0].numOfRoosters %>" placeholder="<%= recordData[0].numOfRoosters %>" required>
              </div>
            </div>
            <div class="row">
              <div class="col pb-2">
                <label for="status" class="form-label pt-2 mb-0">Status</label>
                <select class="form-select ps-2" name="status" id="status" required>
                  <% for (status of healthStatus) { 
                    if (status.status === 'Moved to SB') {continue}
                  %>
                    <option value="<%= status.status %>">
                      <%= status.status %>
                    </option>
                    <% } %>
                </select>
              </div>
            </div>
            <div class="row" id="hidden" style="display: none">
              <div class="col pb-2">
                <label for="transferTo" class="form-label pt-2 mb-0">Transfer to</label>
                <select class="form-select ps-2" name="transferTo" id="transferTo">
                  <% for (coopID of coopIDs) { if (coopID.coopID==='SB' ) { continue; } %>
                    <option value="<%= coopID.coopID %>">
                      <%= coopID.coopID %>
                    </option>
                  <% } %>
                  </select>
              </div>
            </div>
            <div class="col-12 mt-3 align-self-end d-flex">
              <button type="button" class="btn btn-sm btn-warning p-3 px-3" data-bs-toggle="modal"
                data-bs-target="#confirmationModal" id="submitBtn">
                Submit form
              </button>
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="confirmationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
          aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Submit Record?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body" id="modalBody">
        
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-warning" action="submit">Confirm</button>
              </div>
            </div>
          </div>
      </form>
