    <script>
      document.getElementById('status').addEventListener('change', function handleChange(e) {
        const hidden = document.getElementById('hidden');
        if (event.target.value == 'Cured') {
          hidden.style.display = 'block'
        } else {
          hidden.style.display = 'none'
        }
      })
    </script>

    <!-- Populate data from form to modal -->
    <script>
      document.getElementById('submitBtn').addEventListener('click', function () {

        // Get the form data
        var formData = new FormData(document.getElementById('updateChickenHealthForm'));
        var recordID = formData.get('recordID');
        var origin = formData.get('origin');
        var symptom = formData.get('symptom');
        var numOfHens = formData.get('numOfHens');
        var numOfRoosters = formData.get('numOfRoosters');
        var status = formData.get('status');
        var transferTo = status === 'Cured' ? formData.get('transferTo') : 'N/A';

        var modalBodyContent = '<h5>This will submit the following record:</h5><ul><li>Record ID: <b>' +
          recordID + '</b></li><li>Origin: <b>' + origin + '</b></li><li>Health Symptom: <b>' + 
          symptom + '</b></li><li>Number of Hens: <b>' + numOfHens + '</b></li><li>Number of Roosters: <b>' +
          numOfRoosters + '</b></li><li>Updated Status: <b>' + status  + '</b></li><li>Transfer to: <b>' + transferTo + '</b></li></ul>'
        document.getElementById('modalBody').innerHTML = modalBodyContent;

      });
    </script>


